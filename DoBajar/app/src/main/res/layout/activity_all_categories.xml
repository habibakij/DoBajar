<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E3E3"
    tools:context=".activity.AllCategories">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:layout_marginBottom="5sp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/categories_beverages"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:background="#fff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/vabarage" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#aaa" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="Beverages"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/categories_dairy"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_marginTop="1dp"
                            android:background="#fff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/dairy" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#aaa" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="Dairy"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/categories_meat"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_marginTop="1dp"
                            android:background="#fff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/meat" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#aaa" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="Meat"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="5sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/categories_paper_goods"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_marginTop="1dp"
                            android:background="#fff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/papergoods" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#aaa" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="Paper Goods"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="12sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/categories_bakery"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:background="#fff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/bakery" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#aaa" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="Bakery"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/categories_produce"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_marginTop="1dp"
                            android:background="#fff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/vegetable" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#aaa" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="vegetable"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/categories_fish"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_marginTop="1dp"
                            android:background="#fff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/fish" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#aaa" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="Fish"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="175sp"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="5sp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5sp"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/categories_personal_care"
                            android:layout_width="match_parent"
                            android:layout_height="145dp"
                            android:layout_marginTop="1dp"
                            android:background="#fff"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/personalcares" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:background="#aaa" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:gravity="center"
                            android:text="Personal Care"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>