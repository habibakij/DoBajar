<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginEnd="10sp"
    app:cardCornerRadius="20sp"
    app:cardElevation="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5sp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/card_product_image"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/coffee" />

            <TextView
                android:id="@+id/card_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_toEndOf="@id/card_product_image"
                android:paddingStart="20sp"
                android:text="burger"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_product_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_product_name"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/card_product_image"
                android:gravity="center_vertical"
                android:paddingLeft="20sp"
                android:text="450"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/card_product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_product_prize"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@id/card_product_image"
                android:gravity="center_vertical"
                android:paddingLeft="20sp"
                android:text="3"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/card_product_increment"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/cart_button_corner"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_add" />

            <ImageButton
                android:id="@+id/card_product_decrement"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/cart_button_corner"
                android:layout_below="@id/card_product_increment"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_remove" />


            <!--<com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_card_product_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_clear"
                android:visibility="invisible"
                app:backgroundTint="@color/colorPrimaryDark">

            </com.google.android.material.floatingactionbutton.FloatingActionButton>-->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
